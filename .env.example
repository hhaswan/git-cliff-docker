# ============================================
# Environment Variables untuk Changelog Service
# ============================================
# Copy file ini menjadi .env dan sesuaikan nilainya

# Timezone untuk timestamp changelog
TZ=Asia/Jakarta

# URL GitLab self-hosted Anda
GITLAB_URL=https://gitlab.example.com

# Token untuk autentikasi ke API service ini
# Gunakan string yang kuat dan random
CHANGELOG_API_TOKEN=your-secure-random-token-here

# Debug mode (true/false)
DEBUG=false

# Port untuk service
PORT=8080
